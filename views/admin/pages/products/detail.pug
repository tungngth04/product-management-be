extends ../../layouts/default.pug

block main
    if (product.title)
        h1(class="mb-4") #{product.title}

    if (product.price)
        div(class="mb-4") Giá: <b>#{product.price}$</b>

    if (product.discountPercentage)
        div(class="mb-4") Giam giá: <b>#{product.discountPercentage}%</b>

    if (product.stock)
        div(class="mb-4") Còn lại: <b>#{product.stock}</b>

    if (product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail
                style="width: 100px"
            )

    if (product.status)
        div(class="mb-4")
                span Trạng thái:
                if (product.status === "active")
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-danger") Dừng hoạt động

    if (product.position)
        div(class="mb-4") Vi trí: <b>#{product.position}</b>
    // dùng ! vì tiny mce trả về html nên ! sẽ hiện thị html còn # hiện thị text
    if (product.description)
        div(class="mb-4") !{product.description} 

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning"
    ) Chỉnh sửa

    script(src="/admin/js/product.js")